            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="214.0" prefWidth="322.0">
                    <children>
                        <ListView id="wishesListView" fx:id="wishesListView" prefHeight="215.0" prefWidth="320.0"/>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
        <Label id="addWishFeedback" fx:id="addWishFeedback" alignment="CENTER" contentDisplay="CENTER" layoutX="27.0"
               layoutY="113.0" prefHeight="18.0" prefWidth="278.0" textAlignment="CENTER"/>
        <Line endX="216.99996948242188" layoutX="103.0" layoutY="400.0" startX="-100.0"/>
        <Button id="removeWish" fx:id="removeWish" layoutX="91.0" layoutY="368.0" mnemonicParsing="false"
                onAction="#removeWish" style="-fx-background-color: black;" text="Remove selected wish"
                textFill="WHITE"/>
    </children>
