            xmlns="http://javafx.com/javafx" fx:controller="wishList.ui.ShowListViewController">
    <children>
        <Button id="addNewWishButton" fx:id="addNewWishButton" layoutX="185.0" layoutY="87.0" mnemonicParsing="false"
