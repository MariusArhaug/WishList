        <Button id="yourFriends" fx:id="yourFriends" layoutX="127.0" layoutY="402.0" mnemonicParsing="false"
                onAction="#changeToFriendsView" style="-fx-background-color: black;" text="Your friends"
                textFill="WHITE"/>
        <Label id="wishListName" fx:id="wishListName" layoutX="29.0" layoutY="130.0" text="#wishListName:"/>
        <TextField id="addNewWishField" fx:id="addNewWishField" layoutX="27.0" layoutY="87.0"/>
